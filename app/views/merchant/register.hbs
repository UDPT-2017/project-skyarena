<form class="form-horizontal col-xs-6 col-md-offset-3" method="post" enctype="multipart/form-data" >
    <h2 class = "col-md-offset-1">Let's be a SHOP Owner!</h2>
    <div class="form-group">
        <label for="inputName" class="control-label col-xs-2">Name</label>
        <div class="col-xs-8">
            <input name="name" type="text" class="form-control" id="inputName" placeholder="Your Shop's Name">
        </div>
    </div>
    <div class="form-group">
        <label for="inputAvatar" class="control-label col-xs-2">Avatar</label>
        <div class="col-xs-8">
            <input name="avatar" type="file" class="form-control" id="inputAvatar">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPhone" class="control-label col-xs-2">Phone</label>
        <div class="col-xs-8">
            <input name="phone" type="text" class="form-control" id="inputPhone">
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-offset-4 col-xs-10">
            <button type="submit" class="btn btn-success">Submit</button>
            <a class="btn btn-success" href="/">Back</a>
        </div>
    </div>
</form>