<h2 class="center">
    User page
</h2>
<form class="col-xs-6 col-xs-offset-3" method="post" enctype="multipart/form-data" onsubmit="return update()">
    <div class="form-group">
        <label for="email">Email address:</label>
        <input type="email" class="form-control" id="email" name="email" value={{session.email}} readonly>
    </div>
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="name" value={{session.name}}>
    </div>
    {{#if check }} {{else}}
    <label for="pwd">New password:</label>
    <input id="pwd" type="password" class="form-control" name="newPassword" value="">
    <div id="error">

    </div>
    <div class="form-group">
        <label for="pwd">Confirm new password:</label>
        <input id="newPassword2" type="password" class="form-control" name="newPassword2">
    </div>
    <div class="form-group">
        <label for="pwd">Old password:</label>
        <input id="oldPassword" type="password" class="form-control" name="oldPassword">

    </div>
    <div class="form-group">
        <label for="inputAvatar">New Avatar:</label>
        <input name="avatar" type="file" id="inputAvatar">
    </div>
    <br>
    <div class="center">
        <button type="submit" class=" btn btn-info">Submit</button>
    </div>
    {{/if}}


    <div class="form-group center">
        <label><h2>Premium end on:{{premium}}</h2></label> <br>
        <a href="/user/premium" class="btn btn-success">Add 30 days</a>
    </div>
</form>

<br>
<script>
    function update() {
        if ($("#pwd").val() !== $("#newPassword2").val()) {
            $("#error").text("comfirm password and password don't match");
            console.log("ok")
            return false
        }
        return true
    }

</script>